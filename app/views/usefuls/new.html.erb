</div>
<div>
  <%= form_with model: @useful, url:[@useful.sample, @useful] do |form| %>
    <% if @useful.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(@useful.errors.count, "error") %> prohibited this word from being saved:</h2>

        <ul>
          <% @useful.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <strong>User:</strong>
    <%= form.collection_select :user, User.all, :id, :note_title %>
