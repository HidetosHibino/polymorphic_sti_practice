<p style="color: green"><%= notice %></p>

<h1>Reactions</h1>

<div id="reactions">
  <% @reactions.each do |reaction| %>
    <% if reaction.type == 'Similar' %>
      <%= render 'words/similars/similar', {similar: reaction} %>
    <% else %>
      <%= render 'reactions/reaction', {reaction: reaction} %>
    <% end %>
    <p>
      <%= link_to "Show this reaction", reaction %>
    </p>
  <% end %>
</div>

<%= link_to "New reaction", new_reaction_path %>
